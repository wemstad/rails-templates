!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}

  %head
    %title=h yield(:title) || "$APP_NAME"
    = stylesheet_link_tag :flutie, '960', 'application', :cache => true
    = javascript_include_tag :defaults
    =# javascript_include_tag '960'
    = csrf_meta_tag
    = yield(:head)

  %body
  #header.container_12
    #title.prefix_1.grid_5= link_to '$APP_NAME', root_url
    #user-bar.grid_5.suffix_1= render :partial => 'users/user_bar'
    .clear

  #content-wrapper.container_12
    .content-wrapper.prefix_1.grid_10.suffix_1
      .content
        #menu
          %ul.menu-horiz
            = render :partial => 'layouts/menu'
          &nbsp;
    
        .hr
          %hr
    
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => "#{name}"
    
        - if show_title?
          %h1= yield(:title)
    
        .guts
          = yield
    .clear

  #footer.container_12
    .grid_2
      %ul.menu
        =# render :partial => 'layouts/menu'
        &nbsp;
    .prefix_3.grid_7
      &copy;2010
      = link_to 'Stephen Aument', 'http://www.stephenaument.com'
    .clear
