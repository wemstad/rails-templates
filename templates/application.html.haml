!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}

  %head
    %title=h yield(:title) || "$APP_NAME"
    = stylesheet_link_tag :flutie, '960', 'application', :cache => true
    = javascript_include_tag :defaults
    = javascript_include_tag '960'
    = csrf_meta_tag
    = yield(:head)

  %body

    #header.container_12
      =#user-bar= render :partial => 'users/user_bar'
      #title.grid_9= link_to '$APP_NAME', root_url
      #user-bar.grid_3 Hi, Stephen
      .clear

    #container.container_12.content
      #menu.grid_12
        %ul.menu-horiz
          %li Menu Item
          %li | Menu Item
      .clear
      #menu2.grid_12
        %ul.menu-horiz
          %li It Was
          %li | A Long Menu
          %li | So We
          %li | Split It Out
          %li | Onto Two Lines
      .clear

      %hr.grid_12
      .clear
      
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}", :class => "#{name}"
        .clear
      
      =#- if show_title?
      =#%h1.grid_12= yield(:title)
      =#.clear
      
      .grid_12
        = yield
      .clear

    #footer.container_12
      .grid_12
        &copy;2010
        = link_to 'Stephen Aument', 'http://www.stephenaument.com'
      .clear
